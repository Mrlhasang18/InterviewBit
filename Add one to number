




  code/soln: 
vector<int> Solution::plusOne(vector<int> &a) {
    vector<int> sol;
    int carry=1;
    int mostsignificant=a.size()-1;
    for(int i=a.size()-1;i>=0;i--){
        int sum=carry+a[i];
        carry=sum/10;
        a[i]=sum%10;
        if(sum) mostsignificant=i;
    }
    for(int i=a.size()-1;i>=mostsignificant;i--)
    {
        sol.push_back(a[i]);
    }
    if(carry) sol.push_back(carry);
    reverse(sol.begin(),sol.end());
    return sol;
}
